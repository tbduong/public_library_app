<!DOCTYPE html>
<html>
  <head>
    <title>LibApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

      <% flash.each do |name, msg| %>
    <p>
      <small> <%= name.capitalize %>: <%= msg %> </small>
    </p>
  <% end %>

    <h3>
      <% if current_user %>
      <h4><%= link_to "Profile", user_path(current_user) %></h4>
      <h4><%= link_to "Log Out", logout_path %></h4>
    <% else %>
      <h4><%= link_to "Create Account", new_user_path %></h4>
      <h4><%= link_to "Log In", login_path %></h4>
    <% end %>
  </h3>

    <%= yield %>
  </body>
</html>
